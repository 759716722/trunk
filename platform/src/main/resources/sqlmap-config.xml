	</settings>

	<typeAliases>
        <package name="com.jwei.*.entity"/>
    </typeAliases>

	<mappers>

		<mapper resource="sqlmap/SysUserMapper.xml"></mapper>
		<mapper resource="sqlmap/SysDeptMapper.xml"></mapper>
		<mapper resource="sqlmap/SysRoleMapper.xml"></mapper>
		<mapper resource="sqlmap/SysMenuMapper.xml"></mapper>
		<mapper resource="sqlmap/SysUserRoleMapper.xml"></mapper>
		<mapper resource="sqlmap/SysRoleMenuMapper.xml"></mapper>

		<mapper resource="sqlmap/RadWordbookMapper.xml"></mapper>
		<mapper resource="sqlmap/RadTypeConfigMapper.xml"></mapper>
		<mapper resource="sqlmap/RadProductMapper.xml"></mapper>
		<mapper resource="sqlmap/RadProductDetailMapper.xml"></mapper>

		<mapper resource="sqlmap/HrEmployeeMapper.xml"></mapper>
		<mapper resource="sqlmap/HrEmployeeContractMapper.xml"></mapper>
	</mappers>
	
	
</configuration>