      <!-- jetty:run 添加jetty插件以便启动 -->
      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <version>9.2.24.v20180105</version>
        <configuration>
          <httpConnector>
            <port>8090</port>
          </httpConnector>
          <stopPort>9966</stopPort>

          <webApp>
